{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Web",
      "type": "shell",
      "command": "pnpm dev --filter web",
      "problemMatcher": [],
      "presentation": {
        "panel": "new",
        "reveal": "always"
      }
    },
    {
      "label": "Server",
      "type": "shell",
      "command": "pnpm dev --filter @call/server",
      "problemMatcher": [],
      "presentation": {
        "panel": "new",
        "reveal": "always"
      }
    },
    {
      "label": "WebSocket",
      "type": "shell",
      "command": "pnpm dev:ws",
      "options": {
        "cwd": "${workspaceFolder}/apps/server"
      },
      "problemMatcher": [],
      "presentation": {
        "panel": "new",
        "reveal": "always"
      }
    },
    {
      "label": "Run All",
      "dependsOn": ["Web", "Server", "WebSocket"],
      "dependsOrder": "parallel"
    }
  ]
}
