{
  "extends": "@call/typescript-config/base",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/config/*": ["config/*"],
      "@/lib": ["lib/index"],
      "@/lib/*": ["lib/*"],
      "@/validators": ["validators/index"],
      "@/validators/*": ["validators/*"],
      "@/routes": ["routes/index"],
      "@/routes/*": ["routes/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "incremental": false
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
